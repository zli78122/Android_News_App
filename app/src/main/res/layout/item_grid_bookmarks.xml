<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="205.5dp"
    android:layout_height="271dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:id="@+id/bookmarkContainer"
        android:layout_margin="5dp"
        app:cardCornerRadius="15dp"
        android:layout_width="195.5dp"
        android:layout_height="260dp">
        
        <RelativeLayout
            android:layout_width="195.5dp"
            android:layout_height="260dp">
            
            <ImageView
                android:id="@+id/bookmarkImage"
                android:layout_width="195.5dp"
                android:layout_height="150dp"/>

            <TextView
                android:id="@+id/bookmarkTitle"
                android:ellipsize="end"
                android:lines="3"
                android:textSize="16sp"
                android:textColor="#000000"
                android:textStyle="bold"
                android:text="Country diary: singing stonechat gives after-hours perference apple"
                android:layout_margin="10dp"
                android:layout_below="@+id/bookmarkImage"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/bookmarkDate"
                android:paddingStart="10dp"
                android:paddingBottom="10dp"
                android:textColor="#969696"
                android:textSize="14sp"
                android:layout_alignParentBottom="true"
                android:text="06 Apr"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/bookmarkLine"
                android:layout_marginHorizontal="5dp"
                android:textStyle="bold"
                android:paddingBottom="8dp"
                android:textColor="#3f2186"
                android:textSize="16sp"
                android:layout_toEndOf="@+id/bookmarkDate"
                android:layout_alignParentBottom="true"
                android:text="|"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/bookmarkSection"
                android:ellipsize="end"
                android:lines="1"
                android:paddingBottom="10dp"
                android:textColor="#969696"
                android:textSize="14sp"
                android:layout_toEndOf="@+id/bookmarkLine"
                android:layout_alignParentBottom="true"
                android:text="Worldnewsnewsnews"
                android:layout_width="90dp"
                android:layout_height="wrap_content"/>

            <ImageView
                android:id="@+id/bookmarkIconChecked"
                android:visibility="visible"
                android:src="@drawable/ic_bookmark_24px"
                android:layout_alignParentBottom="true"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="10dp"
                android:layout_marginBottom="10dp"
                android:layout_width="30dp"
                android:layout_height="30dp"/>
        </RelativeLayout>
    </androidx.cardview.widget.CardView>

    <View
        android:layout_marginTop="270dp"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#CFCFCF" />
</RelativeLayout>
